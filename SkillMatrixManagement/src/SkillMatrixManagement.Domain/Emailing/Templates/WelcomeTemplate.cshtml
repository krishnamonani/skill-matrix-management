@model SkillMatrixManagement.Emailing.WelcomeEmailModel
<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <title>Welcome to Skill Matrix Management System</title>
</head>
<body style="font-family: Arial, Helvetica, sans-serif; line-height: 1.6; color: #333; max-width: 600px; margin: 0 auto; padding: 20px;">
    <div style="background-color: #f8f9fa; padding: 20px; border-radius: 5px; border-left: 4px solid #007bff;">
        <h1 style="color: #007bff;">Welcome to Skill Matrix Management System</h1>
        
        <p>Your account has been created successfully.</p>
        
        <p><strong>Username:</strong> @Model.Username</p>
        <p><strong>Temporary Password:</strong> @Model.Password</p>
        
        <p>For security reasons, we recommend changing your password after the first login.</p>
        
        <p>You can change your password by clicking the link below:</p>
        
        <p>
            <a href="@Model.ResetPasswordLink" style="display: inline-block; background-color: #007bff; color: white; padding: 10px 20px; text-decoration: none; border-radius: 4px;">Reset Password</a>
        </p>
        
        <p>If you have any questions, please contact your administrator.</p>
        
        <p>Thank you,<br />
        Skill Matrix Management Team</p>
    </div>
</body>
</html>
